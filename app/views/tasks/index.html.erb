<h1>Tasks</h1>
<%= link_to 'My Blog', controller: 'tasks' %>
<%= link_to 'New task', new_task_path %>
<table class="table-article">
  <tr class="title-article">
    <th>Title</th>
    <th>Text</th>
    <th>User Id</th>
    <th>Complete?</th>
    <th>Options</th>
  </tr>

  <%= link_to 'Destroys', destroy_path, method: :delete,
              data: { confirm: 'Are you sure?' } %>

  <% @tasks.each do |task| %>
    <tr class="content-article">
      <td><%= task.title %></td>
      <td><%= task.text %></td>
      <td><%= task.user_id %></td>

      <td>
        <%= link_to task.complete.to_s, task_path(task, :task => {:complete => !task.complete}), method: :put %>
      </td>

      <td><%= link_to 'Show', task_path(task) %> |
      <%= link_to 'Edit', edit_task_path(task) %> |
      <%= link_to 'Destroy', task_path(task), method: :delete,
      data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>


